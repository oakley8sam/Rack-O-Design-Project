import java.awt.*;

import javax.swing.*;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class playerWindow extends JPanel{ 
	//the buttons and labels in each player's panel
	JButton show;
	JButton hide;
	JButton[] rack;
	JLabel name;
	JButton hand;
	JButton discard;
	JButton endTurn;
	JLabel blank1;
	JLabel blank2;
	JLabel blank3;
	JLabel blank4;
	JLabel blank5;
	JLabel blank6;
	JLabel blank7;
	JLabel blank8;
	
	playerWindow(Master a, int playNum){
		super();
		setLayout(new GridLayout(0,12));
		setSize(400,400);
		//creates the buttons and labels and allows the to be linked to actions
		show = new JButton("SHOW");
		hide = new JButton("HIDE");
		rack = new JButton[10];
		for (int i=0;i<rack.length;i++){
			rack[i] = new JButton("");
		}
		hand = new JButton("");
		discard = new JButton("DISCARD");
		name = new JLabel("Player "+playNum);
		endTurn = new JButton("End Turn");
		blank1 = new JLabel("");
		blank2 = new JLabel("");
		blank3 = new JLabel("");
		blank4 = new JLabel("");
		blank5 = new JLabel("");
		blank6 = new JLabel("");
		blank7 = new JLabel("");
		blank8 = new JLabel("");
		add(show);
		add(hide);
		for (int i=0;i<rack.length;i++){
			add(rack[i]);
		}
		
		add(name);
		add(blank1);
		add(blank2);
		add(blank3);
		add(blank4);
		add(hand);
		add(discard);
		add(blank5);
		add(blank6);
		add(blank7);
		add(blank8);
		add(endTurn);
		setVisible(true);
		
		show.addActionListener(a);
		hide.addActionListener(a);
		for (int i=0;i<rack.length;i++)
		{
			rack[i].addActionListener(a);
		}
		discard.addActionListener(a);
		endTurn.addActionListener(a);
		
		show.setActionCommand("show"+playNum);
		hide.setActionCommand("hide"+playNum);
		for (int i=0;i<rack.length;i++)
		{
			rack[i].setActionCommand(""+i+"_"+playNum);
		}
		discard.setActionCommand("discard"+playNum);
		endTurn.setActionCommand("endTurn"+playNum);
	}
}
