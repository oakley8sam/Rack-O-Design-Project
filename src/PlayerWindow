import java.awt.*;

import javax.swing.*;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class playerWindow extends JPanel{ 
	
	JButton show;
	JButton hide;
	JButton[] rack;
	JTextField name;
	JButton hand;
	JButton discard;
	JButton endTurn;
	
	playerWindow(Master a, int playNum){
		super();
		setLayout(new FlowLayout()); //prettier layout, make sure all 10 cards are in one row
		setSize(400,400);
		
		show = new JButton("SHOW");
		hide = new JButton("HIDE");
		rack = new JButton[10];
		for (int i=0;i<rack.length;i++){
			rack[i] = new JButton("");
		}
		hand = new JButton("");
		discard = new JButton("TRASH DAT BISH");
		name = new JTextField("Player "+playNum);
		endTurn = new JButton("EndTurn"+playNum);
		add(show);
		add(hide);
		for (int i=0;i<rack.length;i++){
			add(rack[i]);
		}
		add(hand);
		add(discard);
		add(name);
		add(endTurn);
		setVisible(true);
		
		show.addActionListener(a);
		hide.addActionListener(a);
		for (int i=0;i<rack.length;i++)
		{
			rack[i].addActionListener(a);
		}
		discard.addActionListener(a);
		endTurn.addActionListener(a);
		
		show.setActionCommand("show"+playNum);
		hide.setActionCommand("hide"+playNum);
		for (int i=0;i<rack.length;i++)
		{
			rack[i].setActionCommand(""+i+"_"+playNum);
		}
		discard.setActionCommand("discard"+playNum);
		endTurn.setActionCommand("endTurn"+playNum);
	}
}
